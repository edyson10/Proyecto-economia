<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".Ejercicios.EjercicioActivity">

    <TextView
        android:id="@+id/txtTituloEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EJERCICIO n/a"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtEnunciadoEjericico"
        android:layout_below="@id/txtTituloEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSolucionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SOLUCION"/>

</RelativeLayout>